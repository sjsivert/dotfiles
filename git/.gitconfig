	email = sindrejohan1@gmail.com
	name = Sindre Sivertsen
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[diff]
	tool = vimdiff
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[difftool]
	prompt = false
	bc3 = trustExitCode
[pull]
	rebase = true
	autoSquash = true
	autoStash = true
	updateRefs = true
[filter "gitignore"]
	clean = "sed '/#gitignore$/d'"
	smudge = cat
[init]
	defaultBranch = main
[rebase]
	autoStash = true
	updateRefs = true
[push]
	autoSetupRemote = true

# clearly makes git better

[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

# why the hell not?
[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[core]
        excludesfile = ~/.gitignore

[url "git@github.com:"]
	insteadOf = https://github.com/
